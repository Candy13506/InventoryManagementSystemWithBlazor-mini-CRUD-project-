@page "/product"
@inject AppDbContext db

<PageTitle>Product Management</PageTitle>

<h3>Product List</h3>

<!-- Product Entry -->
<div class="mb-3">
    <label class="form-label">Product Name</label>
    <input type="text" class="form-control" @bind="request.Name" placeholder="Enter product name" />
</div>

<div class="mb-3">
    <label class="form-label">Price</label>
    <input type="number" step="0.01" class="form-control" @bind="request.Price" placeholder="Enter price" />
</div>

<div class="mb-3">
    <label class="form-label">Quantity</label>
    <input type="number" class="form-control" @bind="request.Quantity" placeholder="Enter quantity" />
</div>

<button class="btn btn-success me-2" @onclick="Save">Save</button>

<hr />

<!-- Search -->
<div class="mb-3">
    <label class="form-label">Search Product</label>
    <input type="text" class="form-control" @bind="searchTerm" placeholder="Enter product name" />
    <button class="btn btn-outline-primary mt-2 me-2" @onclick="Search">Search</button>
    <button class="btn btn-outline-secondary mt-2" @onclick="ClearSearch">Clear</button>
</div>

<!-- Product List -->
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>No.</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = (pageNo - 1) * pageSize;
            foreach (var item in lst)
            {
                <tr>
                    <td>@(++count)</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" @onclick="() => Edit(item.ProductId)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(item.ProductId)">Delete</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= pageCount; i++)
        {
            var current = i;  <!-- capture variable correctly -->
            string active = i == pageNo ? "active" : "";
            <li class="page-item @active">
                <button class="page-link" type="button" @onclick="() => GoTo(current)">@i</button>
            </li>
        }
    </ul>
</nav>

@code {
    private int pageNo = 1;
    private int pageSize = 10;
    private int pageCount = 0;
    private List<Product> lst = new();
    private Product request = new();
    private string searchTerm = "";

    protected override async Task OnInitializedAsync()
    {
        await Reload();
    }

    private async Task Reload()
    {
        var query = db.Products
            .Where(x => x.IsDeleted == false);

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(x => x.Name.Contains(searchTerm));
        }

        query = query.OrderByDescending(x => x.ProductId);

        var count = await query.CountAsync();
        pageCount = (count + pageSize - 1) / pageSize;

        lst = await query
            .Skip((pageNo - 1) * pageSize)
            .Take(pageSize)
            .ToListAsync();
    }

    private async Task GoTo(int currentPageNo)
    {
        pageNo = currentPageNo;
        await Reload();
    }

    private async Task Search()
    {
        pageNo = 1; // reset page to 1 when searching
        await Reload();
    }

    private async Task ClearSearch()
    {
        searchTerm = "";
        pageNo = 1;
        await Reload();
    }

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(request.Name))
            return;

        if (request.ProductId == 0)
        {
            request.CreatedBy = "System";
            request.CreatedDate = DateTime.Now;
            request.IsDeleted = false;
            db.Products.Add(request);
        }
        else
        {
            var data = await db.Products.FirstOrDefaultAsync(x => x.ProductId == request.ProductId);
            if (data != null)
            {
                data.Name = request.Name;
                data.Price = request.Price;
                data.Quantity = request.Quantity;
                data.ModifiedBy = "System";
                data.ModifiedDate = DateTime.Now;
            }
        }

        await db.SaveChangesAsync();
        request = new Product();
        await Reload();
    }

    private async Task Edit(int id)
    {
        var data = await db.Products.FirstOrDefaultAsync(x => x.ProductId == id);
        if (data != null)
        {
            request = new Product
            {
                ProductId = data.ProductId,
                Name = data.Name,
                Price = data.Price,
                Quantity = data.Quantity
            };
        }
    }

    private async Task Delete(int id)
    {
        var data = await db.Products.FirstOrDefaultAsync(x => x.ProductId == id);
        if (data != null)
        {
            data.IsDeleted = true;
            data.ModifiedBy = "System";
            data.ModifiedDate = DateTime.Now;
            await db.SaveChangesAsync();
            await Reload();
        }
    }
}
